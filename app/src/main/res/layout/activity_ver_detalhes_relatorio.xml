<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:fitsSystemWindows="true"
tools:context=".Activity.VerDetalhesPedidoActivity">

<android.support.design.widget.AppBarLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/appBarLayout_settings"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:layout_scrollFlags="scroll|enterAlways"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

</android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:text="Data :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/margin_top_toolbar"
            android:id="@+id/textView8" />

        <!-- View separando a parte da quantidade dos pedidos do dia -->
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_height"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/view_top_qtd_pedidos"
            android:background="@android:color/darker_gray"
            android:layout_below="@+id/textView10"/>

        <TextView
            android:text="Num. Vendas no cartão :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView14"
            android:layout_alignParentStart="true"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/textView17" />

        <TextView
            android:text="Num. Total de Vendas :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView17"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/textView19" />

        <!-- View separando a parte do total que entrou -->
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_height"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/view_top_total_entrada"
            android:background="@android:color/darker_gray"
            android:layout_below="@+id/textView19"/>

        <TextView
            android:text="Total à vista (R$) :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/textView20"
            android:layout_below="@+id/view_top_total_entrada"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Total no cartão (R$) :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView20"
            android:layout_alignParentStart="true"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/textView21" />

        <TextView
            android:text="Total (R$) :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView21"
            android:layout_alignParentStart="true"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/textView23" />


        <!-- View separando a parte do total que entrou -->
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_height"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/view_top_total_lucro"
            android:background="@android:color/darker_gray"
            android:layout_below="@+id/textView23"/>

        <TextView
            android:text="Lucro à vista (R$) :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/view_top_total_lucro"
            android:layout_alignParentStart="true"
            android:layout_marginTop="31dp"
            android:id="@+id/textView24" />

        <TextView
            android:text="Lucro no cartão (R$) :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/textView25"
            android:layout_below="@+id/textView24"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Lucro Total (R$) :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/textView5"
            android:layout_below="@+id/textView25"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Num. Vendas à vista :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:id="@+id/textView14"
            android:layout_below="@+id/view_top_qtd_pedidos"
            android:layout_alignStart="@+id/view_top_qtd_pedidos" />

        <TextView
            android:text="Tipo do Relatório :"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/textView10"
            android:layout_below="@+id/textView8"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/textView24" />

        <TextView
            android:text="15/11/16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_alignTop="@+id/textView8"
            android:layout_toEndOf="@+id/textView8"
            android:id="@+id/tv_data_ver_detalhes_relatorio" />

        <TextView
            android:text="Diário"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_alignTop="@+id/textView10"
            android:layout_toEndOf="@+id/textView10"
            android:id="@+id/tv_tipo_ver_detalhes_relatorio" />

        <TextView
            android:text="23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_alignTop="@+id/textView14"
            android:layout_toEndOf="@+id/textView14"
            android:id="@+id/tv_qtd_vendas_avista_ver_detalhes_relatorio" />

        <TextView
            android:text="68"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_alignTop="@+id/textView19"
            android:layout_toEndOf="@+id/textView19"
            android:id="@+id/tv_qtd_vendas_total_ver_detalhes_relatorio" />

        <TextView
            android:text="240,50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_alignTop="@+id/textView20"
            android:layout_toEndOf="@+id/textView20"
            android:id="@+id/tv_total_entrada_avista_ver_detalhes_relatorio" />

        <TextView
            android:text="480,00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_alignTop="@+id/textView21"
            android:layout_toEndOf="@+id/textView21"
            android:id="@+id/tv_total_entrada_cartao_ver_detalhes_relatorio" />

        <TextView
            android:text="720,50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:layout_alignTop="@+id/textView23"
            android:layout_toEndOf="@+id/textView23"
            android:id="@+id/tv_total_entrada_ver_detalhes_relatorio" />

        <TextView
            android:text="120,25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_alignTop="@+id/textView24"
            android:layout_toEndOf="@+id/textView24"
            android:id="@+id/tv_lucro_avista_ver_detalhes_relatorio" />

        <TextView
            android:text="240,00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_alignTop="@+id/textView25"
            android:layout_toEndOf="@+id/textView25"
            android:id="@+id/tv_lucro_cartao_ver_detalhes_relatorio" />

        <TextView
            android:text="360,25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:id="@+id/tv_lucro_total_ver_detalhes_relatorio"
            android:layout_alignBaseline="@+id/textView5"
            android:layout_alignBottom="@+id/textView5"
            android:layout_toEndOf="@+id/textView5" />

        <TextView
            android:text="45"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:id="@+id/tv_qtd_vendas_cartao_ver_detalhes_relatorio"
            android:layout_alignTop="@+id/textView17"
            android:layout_toEndOf="@+id/textView17" />

    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>